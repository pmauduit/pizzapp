<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pizzapp.pizzapp.PizzappActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/illustrationNiaise"
                android:layout_width="wrap_content"
                android:layout_height="290dp"
                app:srcCompat="@drawable/pizzapp" android:contentDescription="@string/imagedesc" />

            <EditText
                android:id="@+id/odooUserName"
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_height="80dp"
                android:inputType="textPersonName"
                android:text="@string/odoo_user" />

            <Spinner
                android:id="@+id/pizzaChoiceSpinner"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <Button
                android:id="@+id/orderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order" />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>
